<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ClassViewActivity"
            android:label="@string/title_activity_class_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.OrganizationDashboard"
            android:label="@string/title_activity_add_student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AddStudentActivity"
            android:label="@string/title_activity_teacher_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.StudentProfileActivity"
            android:label="@string/title_activity_student_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.EditTeacherProfile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.FeedingDashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.BreakfastProgramActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.GitheriProgramActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.RiceBeansProgramActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.TeacherProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SchoolInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.RegisterActivity"></activity>
    </application>

</manifest>